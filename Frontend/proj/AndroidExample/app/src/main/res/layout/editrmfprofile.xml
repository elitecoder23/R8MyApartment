<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LandlordLoginActivity">

    <View
        android:id="@+id/topBackground"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R8MyApartment"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Existing TextViews for user details -->

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nightordayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Night or Day: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hostingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosting: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nightordayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/petTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/hostingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/smokingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoking: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/petTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/organizedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organized: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/smokingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/guestsOverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guests Over: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/organizedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/noiseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noise: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/guestsOverTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cleanlinessTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanliness: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/noiseTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- New Buttons -->
    <Button
        android:id="@+id/editQuizAnswersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Quiz Answers"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cleanlinessTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/deleteProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Profile"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editQuizAnswersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>